<resources>
    <!-- Base application theme. -->
    <style name="Theme.АбитуриентСГУ" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BigBlueText">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>

    </style>

    <style name="HashTag1">
        <item name="android:textColor">#7584D2</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunito_sans_regular</item>

    </style>

    <style name="HashTag2">
        <item name="android:textColor">#7584D2</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/nunito_sans_regular</item>

    </style>


    <style name="AddressTextView">
        <item name="android:textColor">#3B3A3B</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/nunito_sans_regular</item>

    </style>


    <style name="DataTimeTextView">
        <item name="android:textColor">#3B3A3B</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>

    </style>

    <style name="ButtonSubscribe">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="background">@drawable/blue_button_back</item>
    </style>

    <style name="MaterialAlertDialog_rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>