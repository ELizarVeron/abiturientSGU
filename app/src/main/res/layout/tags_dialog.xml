<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CardView_for_tags"
    android:paddingHorizontal="10dp"
    android:layout_width="match_parent"
    app:cardCornerRadius="40dp"
    android:padding="20dp"

    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:id="@+id/constraint_tags"
        android:paddingHorizontal="50dp"
        android:paddingVertical="30dp">

        <CheckBox

            android:id="@+id/cb_it"
            style="@style/BigBlueText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:button="@null"
            android:drawableRight="@drawable/checkbox_selector"
            android:text="ИТ"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cb_prog"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:button="@null"
            style="@style/BigBlueText"
            android:drawableRight="@drawable/checkbox_selector"
            android:text="Программирование"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_it"
            android:layout_marginVertical="20dp" />

        <CheckBox
            android:id="@+id/cb_math"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:button="@null"
            style="@style/BigBlueText"
            android:drawableRight="@drawable/checkbox_selector"
            android:text="Математика"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_prog"
            android:layout_marginVertical="20dp"

            />

        <CheckBox
            android:id="@+id/cb_ib"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:button="@null"
            style="@style/BigBlueText"
            android:drawableRight="@drawable/checkbox_selector"
            android:text="ИБ"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_math"
            android:layout_marginVertical="20dp"

            />

        <CheckBox
            android:id="@+id/cb_tb"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:button="@null"
            style="@style/BigBlueText"
            android:drawableRight="@drawable/checkbox_selector"
            android:text="ТБ"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_ib"
            android:layout_marginVertical="20dp"

            />

        <CheckBox
            android:id="@+id/cb_ped"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:button="@null"
            style="@style/BigBlueText"
            android:drawableRight="@drawable/checkbox_selector"
            android:text="Педагогика"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_tb"
            android:layout_marginVertical="20dp" />

        <CheckBox
            android:id="@+id/cb_ling"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:button="@null"
            style="@style/BigBlueText"
            android:drawableRight="@drawable/checkbox_selector"
            android:text="Лингвистика"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_ped"
            android:layout_marginVertical="20dp" />


        <CheckBox
            android:id="@+id/cb_uri"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:button="@null"
            style="@style/BigBlueText"
            android:drawableRight="@drawable/checkbox_selector"
            android:text="Юриспруденция"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_ling"
            android:layout_marginVertical="20dp" />

        <CheckBox
            android:id="@+id/cb_phil"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:button="@null"
            style="@style/BigBlueText"
            android:drawableRight="@drawable/checkbox_selector"
            android:text="Философия"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_uri"
            android:layout_marginVertical="20dp"

            />

        <CheckBox
            android:id="@+id/cb_med"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:button="@null"
            style="@style/BigBlueText"
            android:drawableRight="@drawable/checkbox_selector"
            android:text="Медицина"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_phil"
            android:layout_marginVertical="20dp"

            />

        <CheckBox
            android:id="@+id/cb_econ"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:button="@null"
            style="@style/BigBlueText"
            android:drawableRight="@drawable/checkbox_selector"
            android:text="Экономика"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_med"
            android:layout_marginVertical="20dp"

            />

        <CheckBox
            android:id="@+id/cb_dis"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:button="@null"
            style="@style/BigBlueText"
            android:drawableRight="@drawable/checkbox_selector"
            android:text="Дизайн"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_econ"
            android:layout_marginVertical="20dp"
            android:paddingBottom="20dp"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>