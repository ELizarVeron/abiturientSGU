<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CardView_for_tags"
    android:paddingHorizontal="10dp"
    android:layout_width="wrap_content"
    app:cardCornerRadius="40dp"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    android:padding="20dp"

    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:id="@+id/constraint_tags"
        android:paddingHorizontal="50dp"
        android:paddingVertical="30dp">

        <TextView

            android:id="@+id/cb_it"
            style="@style/BigBlueText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:gravity="center"
            android:text="Ошибка!"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cb_prog"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"

            android:text="Неверные данные или пользователь не найден"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_it"
            android:layout_marginVertical="20dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/blue_button_back"
            android:button="@null"
            android:text="Повторить"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@id/cb_prog" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>